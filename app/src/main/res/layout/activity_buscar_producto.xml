<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".BuscarProducto">

    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="314dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/prueba"
        android:elevation="2.5dp"
        android:ems="10"
        android:hint="Introduzca codigo artículo:"
        android:inputType="textAutoCorrect"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEscanear"
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="112dp"
        android:backgroundTint="@color/boton"
        android:text="Escanear artículo"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="112dp"
        android:backgroundTint="@color/boton"
        android:text="Buscar Artículo"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvProductos"
        android:layout_width="409dp"
        android:layout_height="565dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="164dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>