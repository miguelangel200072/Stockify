<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".MenuAPP">

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="143dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:backgroundTint="@color/boton"
        android:text="Insertar producto"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="143dp"
        android:layout_height="77dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/boton"
        android:text="Buscar producto"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGenerar"
        android:layout_width="143dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="@color/boton"
        android:text="GENERAR CODIGO"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="USUARIO:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCambio"
        android:layout_width="143dp"
        android:layout_height="77dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/boton"
        android:text="Cambio Stand"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHistorico"
        android:layout_width="143dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/boton"
        android:text="Historico"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGenerar" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="143dp"
        android:layout_height="77dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FB4107"
        android:text="EXIT"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCambio" />

</androidx.constraintlayout.widget.ConstraintLayout>