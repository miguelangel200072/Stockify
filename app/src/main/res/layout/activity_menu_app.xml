<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical"
    tools:context=".MenuAPP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="USUARIO:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center|top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInsertar"
            android:layout_width="143dp"
            android:layout_height="77dp"
            android:layout_marginRight="41dp"
            android:backgroundTint="@color/boton"
            android:text="Insertar producto"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="143dp"
            android:layout_height="77dp"
            android:backgroundTint="@color/boton"
            android:text="Buscar producto"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:gravity="center|top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGenerar"
            android:layout_width="143dp"
            android:layout_height="77dp"
            android:layout_marginRight="41dp"
            android:backgroundTint="@color/boton"
            android:text="GENERAR CODIGO"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnCambio"
            android:layout_width="143dp"
            android:layout_height="77dp"
            android:backgroundTint="@color/boton"
            android:text="Cambio Stand"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHistorico"
            android:layout_width="143dp"
            android:layout_height="77dp"
            android:layout_marginRight="41dp"
            android:backgroundTint="@color/boton"
            android:text="Historico"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGenerar" />

        <androidx.cardview.widget.CardView
            android:layout_width="143dp"
            android:layout_height="66dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10px"
            app:layout_constraintTop_toBottomOf="@+id/btnCambio">

            <FrameLayout
                android:id="@+id/btnExit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF5722">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="Exit"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center|right"
                    android:paddingRight="10dp"
                    android:src="@drawable/iconosalida" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>